# AGI Learning Platform - Test Environment Configuration

# ====================================
# Application Configuration
# ====================================
VITE_APP_NAME="AGI Learning Platform (Test)"
VITE_APP_VERSION="1.0.0-test"
NODE_ENV=test
VITE_NODE_ENV=test

# ====================================
# API Configuration
# ====================================
VITE_API_URL=http://localhost:5001
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=1

# ====================================
# Database Configuration
# ====================================
DB_DIALECT=sqlite
DB_STORAGE=:memory:
DB_LOGGING=false

# Test Database
TEST_DATABASE_URL=sqlite://test.db
DB_SQLITE_PATH=./test.db

# ====================================
# Authentication & Security (Test)
# ====================================
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=4

# ====================================
# Features (Disabled for Testing)
# ====================================
VITE_VR_ENABLED=false
VITE_AR_ENABLED=false
VITE_BLOCKCHAIN_ENABLED=false
VITE_FEATURE_NOTIFICATIONS=false

# ====================================
# Testing Configuration
# ====================================
VITEST_COVERAGE=true
PLAYWRIGHT_HEADLESS=true
DEBUG=false
LOG_LEVEL=error

# Mock Services
OPENAI_API_KEY=test_openai_key
GOOGLE_AI_API_KEY=test_google_key

# ====================================
# Performance & Monitoring (Disabled)
# ====================================
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# ====================================
# Ports & Networking
# ====================================
PORT=5001
VITE_HMR_PORT=5173

# ====================================
# Cache (Disabled for Tests)
# ====================================
CACHE_ENABLED=false
REDIS_URL=

# ====================================
# Rate Limiting (Relaxed for Tests)
# ====================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000 